{
  "version": "1.0.9",
  "name": "rumbrary-app",
  "productName": "Rumbrary",
  "description": "Rumbrary Desktop App",
  "main": "main.js",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rumsystem/rum-epub.git"
  },
  "author": "rumsystem.net",
  "license": "MIT",
  "homepage": "https://github.com/rumsystem/rum-epub#readme",
  "bugs": {
    "url": "https://github.com/rumsystem/rum-epub/issues"
  },
  "scripts": {
    "start": "concurrently \"yarn start:main\" \"cross-env yarn start:renderer\"",
    "start:main": "cross-env NODE_ENV=development electron .",
    "start:renderer": "vite",
    "build": "yarn build:main && yarn build:renderer",
    "build:main": "rimraf ./src/main_dist && tsc --project src/main/tsconfig.json",
    "build:staging": "cross-env BUILD_ENV=staging yarn build:renderer",
    "build:renderer": "tsc && vite build",
    "build:quorum": "git submodule update --init && git submodule foreach git pull origin main && ./scripts/build_quorum.sh",
    "a": "cross-env analyze=true vite build",
    "rebuild": "electron-rebuild --parallel --types prod,dev,optional --module-dir src",
    "lint": "cross-env NODE_ENV=development eslint ./src --cache --ext .js,.jsx,.ts,.tsx",
    "package": "yarn build && yarn package:all",
    "package:staging:all": "yarn build:staging && yarn package:all",
    "package:all": "yarn package:mac && yarn package:win && yarn package:linux && node ./scripts/clear_after_build.js",
    "package:mac": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --mac --publish never",
    "package:win": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --win --ia32 --publish never",
    "package:linux": "cross-env CSC_IDENTITY_AUTO_DISCOVERY=false electron-builder build --linux --publish never",
    "package:release": "yarn build && yarn package:release:all",
    "package:release:all": "rm -rf release && yarn package:release:mac && yarn package:release:win && node ./scripts/clear_after_build.js",
    "package:release:mac": "env-cmd electron-builder build --mac --publish never",
    "package:release:win": "env-cmd electron-builder build --win --ia32 --publish never",
    "package:release:linux": "env-cmd electron-builder build --linux --publish never",
    "package:release:win64": "env-cmd electron-builder build --win --publish never",
    "postinstall": "rimraf ./node_modules/.cache/"
  },
  "dependencies": {
    "@electron/remote": "^2.0.10",
    "@emotion/react": "^11.11.1",
    "@emotion/styled": "^11.11.0",
    "@iarna/toml": "^2.2.5",
    "@mui/icons-material": "^5.13.7",
    "@mui/lab": "^5.0.0-alpha.135",
    "@mui/material": "^5.13.7",
    "@mui/styles": "^5.13.7",
    "@mui/x-date-pickers": "^6.9.2",
    "boxicons": "^2.1.4",
    "classnames": "^2.3.2",
    "date-fns": "^2.30.0",
    "dexie": "^3.2.4",
    "dompurify": "^3.0.5",
    "electron-dl": "^3.5.0",
    "env-cmd": "^10.1.0",
    "epubjs": "^0.3.93",
    "escape-string-regexp": "^5.0.0",
    "fp-ts": "^2.16.0",
    "get-port": "^5.1.1",
    "io-ts": "^2.2.20",
    "mobx": "^6.9.0",
    "mobx-react-lite": "^3.4.3",
    "query-string": "^8.1.0",
    "quorum-bin": "^2.0.3",
    "react": "^18.2.0",
    "react-avatar-editor": "^13.0.0",
    "react-dom": "^18.2.0",
    "react-icons": "^4.10.1",
    "react-image-crop": "^10.1.5",
    "react-infinite-scroll-hook": "^4.1.1",
    "react-table": "^7.8.0",
    "remove-markdown": "^0.5.0",
    "rum-fullnode-sdk": "^2.0.9",
    "rum-sdk-browser": "^2.0.18",
    "scroll-into-view-if-needed": "^3.0.10",
    "tar-stream": "^3.1.6",
    "uuid": "^9.0.0",
    "yauzl": "^2.10.0"
  },
  "devDependencies": {
    "@electron/rebuild": "^3.2.13",
    "@noe132/eslint-config-react": "^0.1.10",
    "@svgr/core": "^8.0.0",
    "@svgr/plugin-jsx": "^8.0.1",
    "@types/classnames": "^2.2.11",
    "@types/dompurify": "^3.0.2",
    "@types/module-alias": "^2.0.1",
    "@types/node": "20.4.1",
    "@types/react": "^18.2.14",
    "@types/react-avatar-editor": "^13.0.0",
    "@types/react-dom": "^18.2.6",
    "@types/react-table": "^7.7.14",
    "@types/remove-markdown": "^0.3.1",
    "@types/rimraf": "^4.0.5",
    "@types/tar-stream": "^2.2.2",
    "@types/yauzl": "^2.10.0",
    "@vitejs/plugin-react": "^4.0.3",
    "concurrently": "^8.2.0",
    "cross-env": "^7.0.2",
    "electron": "25.2.0",
    "electron-builder": "^24.4.0",
    "electron-builder-notarize": "^1.5.1",
    "electron-log": "^4.4.8",
    "electron-store": "^8.1.0",
    "electron-updater": "^6.1.1",
    "eslint": "^8.44.0",
    "module-alias": "^2.2.3",
    "postcss": "^8.4.25",
    "rimraf": "^5.0.1",
    "rollup-plugin-visualizer": "^5.9.2",
    "sass": "^1.63.6",
    "tailwindcss": "^3.3.2",
    "ts-node": "^10.9.1",
    "typescript": "^5.1.6",
    "vite": "^4.4.2",
    "vite-plugin-checker": "^0.6.1",
    "vite-plugin-electron-renderer": "^0.14.5"
  },
  "devEngines": {
    "node": ">=16"
  }
}
